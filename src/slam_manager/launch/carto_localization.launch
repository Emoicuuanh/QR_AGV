<!-- Refer: https://github.com/xuankuzcr/Cartographer_ICRA/blob/master/turtlebot3/turtlebot3_slam/config/turtlebot3_lds_2d.lua -->

<launch>
  <arg name="load_state_filename" default="$(find agvlidar_navigation)/maps/office.pbstream"/>

  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find slam_manager)/cfg
          -configuration_basename carto_localization.lua
          -load_state_filename $(arg load_state_filename)"
      output="screen">
    <!-- Must convert from LaserScan to MultiEchoLaserScan and disable IMU -->
    <!-- <remap from="echoes" to="horizontal_laser_2d"/> -->
    <!-- <remap from="odom" to="odom_carto"/> -->
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05"/>

</launch>
