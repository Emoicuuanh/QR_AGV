<launch>
   <arg name="hard_port" default="$(env TAPE_SS_PORT)" />

   <node name="tape_sensor" pkg="lenet_tape_sensor" type="tape_sensor.py" output="screen" args="-m">
      <rosparam file="$(find amr_config)/cfg/tape_sensor.yaml" command="load" />
      <param name="port" value="$(arg hard_port)" />
   </node>
</launch>